{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "schemaVersion": {
      "type": "number"
    },
    "options": {
      "type": "object",
      "properties": {
        "commandOutput": {
          "enum": ["ignore", "append-at-end", "append-at-end-on-error"]
        },
        "outputFilters": {
          "type": "array",
          "items": {
            "enum": ["npmError", "karmaProgressSuccess", "ignoreStderr", "ignoreStdout"]
          }
        }
      }
    },
    "projects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "projectName": {
            "type": "string",
            "pattern": "^[a-zA-Z][0-9a-zA-Z-]*$"
          },
          "pathGlob": {
            "type": "string"
          },
          "pathRegExp": {
            "type": "string"
          },
          "commands": { "$ref":  "#commands"},
          "responsibles": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "projectName"
        ],
        "additionalProperties": false
      }
    },
    "dependencyScopes": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z][0-9a-zA-Z-]*$": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z][0-9a-zA-Z-]*$": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[a-zA-Z][0-9a-zA-Z-]*$"
              }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "schemaVersion",
    "projects",
    "dependencyScopes"
  ],
  "definitions": {
    "commands": {
      "$id": "#commands",
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z][0-9a-zA-Z-]*$": {
          "type": "object",
          "properties": {
            "command": {
              "type": "string"
            },
            "cwd": {
              "type": "string"
            }
          },
          "required": [
            "command"
          ],
          "additionalProperties": false
        }
      }
    }
  }
}
