{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "schemaVersion": {
            "type": "number"
        },
        "options": {
            "$ref": "#options"
        },
        "plugins": {
            "type": "object",
            "properties": {
                "officiallySupported": {
                    "type": "object",
                    "properties": {
                        "import-boundaries": {
                            "type": "object",
                            "properties": {
                                "importResolvers": {
                                    "type": "object",
                                    "patternProperties": {
                                        "^.+$": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                },
                                "postResolve": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "assertions": {
                                    "type": "array",
                                    "items": {
                                        "enum": [
                                            "only-direct-imports",
                                            "only-transitive-dependencies",
                                            "use-all-declared-dependencies",
                                            "max-skipped-imports",
                                            "access-via-entrypoints"
                                        ]
                                    }
                                },
                                "customAssertions": {
                                    "type": "array",
                                    "description": "Paths relative to scripts containing an assertion",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "assertionOptions": {
                                    "type": "object",
                                    "properties": {
                                        "skippedImports": {
                                            "type": "object",
                                            "properties": {
                                                "mode": {
                                                    "enum": ["exact", "max"]
                                                },
                                                "amount": {
                                                    "type": "number"
                                                }
                                            },
                                            "required": ["mode", "amount"],
                                            "additionalProperties": false
                                        },
                                        "ignoredProjects": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            }
                                        },
                                        "accessViaEntryPoints": {
                                            "type": "object",
                                            "properties": {
                                                "allowWithinSameProject": {
                                                    "type": "boolean"
                                                }
                                            },
                                            "required": ["allowWithinSameProject"],
                                            "additionalProperties": false
                                        },
                                        "restrictPackageImports": {
                                            "type": "object",
                                            "properties": {
                                                "allPackagesMustBeListed": {
                                                    "type": "boolean"
                                                },
                                                "allowConfiguration": {
                                                    "type": "object",
                                                    "properties": {
                                                        "allowByDefault": {
                                                            "type": "array",
                                                            "items": {
                                                                "type": "string"
                                                            }
                                                        },
                                                        "exceptions": {
                                                            "type": "object",
                                                            "patternProperties": {
                                                                "^[a-zA-Z][0-9a-zA-Z-]*$": {
                                                                    "type": "array",
                                                                    "items": {
                                                                        "type": "string"
                                                                    }
                                                                }
                                                            },
                                                            "additionalProperties": false
                                                        }
                                                    },
                                                    "required": ["allowByDefault"],
                                                    "additionalProperties": false
                                                },
                                                "blockConfiguration": {
                                                    "type": "object",
                                                    "properties": {
                                                        "blockByDefault": {
                                                            "type": "array",
                                                            "items": {
                                                                "type": "string"
                                                            }
                                                        },
                                                        "exceptions": {
                                                            "type": "object",
                                                            "patternProperties": {
                                                                "^[a-zA-Z][0-9a-zA-Z-]*$": {
                                                                    "type": "array",
                                                                    "items": {
                                                                        "type": "string"
                                                                    }
                                                                }
                                                            },
                                                            "additionalProperties": false
                                                        }
                                                    },
                                                    "required": ["blockByDefault"],
                                                    "additionalProperties": false
                                                }
                                            },
                                            "additionalProperties": false
                                        }
                                    },
                                    "additionalProperties": false
                                }
                            },
                            "additionalProperties": false,
                            "required": ["importResolvers"]
                        }
                    }
                },
                "custom": {
                    "type": "object",
                    "patternProperties": {
                        "^[a-zA-Z][0-9a-zA-Z-]*$": {
                            "type": "object",
                            "properties": {
                                "scriptLocation": {
                                    "type": "string"
                                }
                            },
                            "additionalProperties": true,
                            "required": ["scriptLocation"]
                        }
                    }
                }
            }
        },
        "projects": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "projectName": {
                        "$ref": "#projectNamePatternString"
                    },
                    "projectFolder": {
                        "type": "string"
                    },
                    "pathGlob": {
                        "type": "string"
                    },
                    "pathRegExp": {
                        "type": "string"
                    },
                    "commands": {
                        "$ref": "#commands"
                    },
                    "responsibles": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "entrypoints": {
                        "type": "array",
                        "description": "Only relevant for the access-via-entrypoints assertion of the @yanice/import-boundaries plugin",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": ["projectName"],
                "additionalProperties": false
            }
        },
        "dependencyScopes": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z][0-9a-zA-Z-]*$": {
                    "type": "object",
                    "properties": {
                        "defaultDependencies": {
                            "type": "array",
                            "items": {
                                "$ref": "#projectNamePatternString"
                            }
                        },
                        "extends": {
                            "$ref": "#projectNamePatternString"
                        },
                        "dependencies": {
                            "$ref": "#dependencies"
                        },
                        "options": {
                            "$ref": "#options"
                        }
                    },
                    "required": ["dependencies"],
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        }
    },
    "required": ["schemaVersion", "projects", "dependencyScopes"],
    "definitions": {
        "projectNamePatternString": {
            "$id": "#projectNamePatternString",
            "type": "string",
            "pattern": "^[a-zA-Z][0-9a-zA-Z-]*$"
        },
        "commands": {
            "$id": "#commands",
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z][0-9a-zA-Z-]*$": {
                    "type": "object",
                    "properties": {
                        "command": {
                            "type": "string"
                        },
                        "cwd": {
                            "type": "string"
                        },
                        "commands": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    },
                    "oneOf": [{ "required": ["command"] }, { "required": ["commands"] }],
                    "additionalProperties": false
                }
            }
        },
        "options": {
            "$id": "#options",
            "type": "object",
            "properties": {
                "commandOutput": {
                    "enum": ["ignore", "append-at-end", "append-at-end-on-error"]
                },
                "outputFilters": {
                    "type": "array",
                    "items": {
                        "enum": ["npmError", "karmaProgressSuccess", "ignoreStderr", "ignoreStdout"]
                    }
                },
                "outputFolder": {
                    "type": "string"
                },
                "port": {
                    "type": "number"
                }
            },
            "additionalProperties": false
        },
        "dependencies": {
            "$id": "#dependencies",
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z][0-9a-zA-Z-]*$": {
                    "type": "array",
                    "items": {
                        "$ref": "#projectNamePatternString"
                    }
                }
            },
            "additionalProperties": false
        }
    }
}
