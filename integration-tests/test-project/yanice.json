{
    "$schema": "../../schema.json",
    "schemaVersion": 2,
    "plugins": {
        "custom": {
            "dummy-plugin": {
                "scriptLocation": "./dummy-plugin.js"
            }
        },
        "officiallySupported": {
            "import-boundaries": {
                "importResolvers": {
                    "**/*.txt": ["./dummy-resolver.js"],
                    "**/*.ts": ["import-resolver-es6"]
                },
                "postResolve": ["./post-resolve.js"],
                "assertions": ["only-allow-actual-imports-in-config", "only-allow-configured-imports"]
            }
        }
    },
    "projects": [
        {
            "projectName": "A",
            "pathGlob": "project-A/**/*",
            "commands": {
                "flat-all-projects-have-commands": {
                    "command": "npm run test-log -- project-A flat-all-projects-have-commands"
                },
                "flat-projects-one-command": {
                    "command": "npm run test-log -- project-A flat-projects-one-command"
                },
                "a-depends-on-b": {
                    "command": "npm run test-log -- project-A a-depends-on-b"
                }
            },
            "responsibles": ["Alice"]
        },
        {
            "projectName": "B",
            "pathGlob": "project-B/**/*",
            "commands": {
                "flat-all-projects-have-commands": {
                    "command": "npm run test-log -- project-B flat-all-projects-have-commands"
                },
                "a-depends-on-b": {
                    "command": "npm run test-log -- project-B a-depends-on-b"
                }
            },
            "responsibles": ["Bob"]
        },
        {
            "projectName": "C",
            "pathGlob": "project-C/**/*",
            "commands": {
                "flat-all-projects-have-commands": {
                    "command": "npm run test-log -- project-C flat-all-projects-have-commands"
                }
            },
            "responsibles": ["Claire"]
        }
    ],
    "dependencyScopes": {
        "flat-all-projects-have-commands": {
            "dependencies": {
                "A": [],
                "B": [],
                "C": []
            }
        },
        "flat-projects-one-command": {
            "dependencies": {}
        },
        "a-depends-on-b": {
            "dependencies": {
                "A": ["B"],
                "B": [],
                "C": []
            }
        }
    }
}
