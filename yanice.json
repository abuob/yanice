{
    "$schema": "./schema.json",
    "schemaVersion": 2,
    "plugins": {
        "officiallySupported": {
            "import-boundaries": {
                "importResolvers": {
                    "**/*.ts": ["es6-declarative-import-resolver"]
                }
            }
        }
    },
    "projects": [
        {
            "projectName": "yanice",
            "pathGlob": "!packages/**",
            "commands": {
                "build": {
                    "command": "tsc -p tsconfig.build.json"
                }
            }
        },
        {
            "projectName": "import-boundaries",
            "pathGlob": "packages/import-boundaries/**",
            "commands": {
                "build": {
                    "command": "tsc -p tsconfig.build.json",
                    "cwd": "packages/import-boundaries"
                }
            }
        }
    ],
    "dependencyScopes": {
        "build": {
            "dependencies": {
                "import-boundaries": ["yanice"]
            }
        }
    }
}
