{
    "$schema": "./schema.json",
    "schemaVersion": 2,
    "plugins": {
        "officiallySupported": {
            "import-boundaries": {
                "importResolvers": {
                    "**/*.ts": ["es6-declarative-import-resolver"]
                },
                "assertions": ["only-direct-imports", "max-skipped-imports"],
                "assertionOptions": {
                    "skippedImports": {
                        "amount": 4,
                        "mode": "exact"
                    },
                    "ignoredProjects": ["ALL-FILES"]
                }
            }
        }
    },
    "projects": [
        {
            "projectName": "yanice",
            "projectFolder": "./src",
            "commands": {
                "build": {
                    "command": "tsc -p tsconfig.build.json"
                }
            },
            "entrypoints": []
        },
        {
            "projectName": "import-boundaries",
            "projectFolder": "./packages/import-boundaries",
            "commands": {
                "build": {
                    "command": "tsc -p tsconfig.build.json",
                    "cwd": "packages/import-boundaries"
                }
            }
        },
        {
            "projectName": "integration-tests",
            "projectFolder": "./integration-tests",
            "commands": {
                "build": {
                    "command": "tsc -p ./integration-tests/test-project/custom-scripts/tsconfig.json"
                }
            }
        }
    ],
    "dependencyScopes": {
        "build": {
            "dependencies": {
                "import-boundaries": ["yanice"],
                "integration-tests": ["yanice", "import-boundaries"]
            }
        },
        "relative-import-boundaries": {
            "dependencies": {
                "yanice": [],
                "import-boundaries": [],
                "integration-tests": []
            }
        }
    }
}
