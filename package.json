{
    "name": "yanice",
    "version": "3.0.1",
    "description": "Yet another incremental command executor",
    "engines": {
        "node": ">=16"
    },
    "main": "dist/index.js",
    "bin": {
        "yanice": "dist/bin.js"
    },
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/!(*.js.map)",
        "schema.json",
        "graph-display-template.html"
    ],
    "scripts": {
        "build-for-local": "tsc -p tsconfig.build.json",
        "build": "node scripts/prebuild.js && node dist/bin.js run build --concurrency=1 --all --output-mode=append-at-end-on-error",
        "format": "prettier --write --loglevel warn \"**/*.+(ts|json|html|yml|js|cjs|md)\"",
        "format:check": "prettier --check --loglevel warn \"**/*.+(ts|json|html|yml|js|cjs|md)\"",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "test": "mocha -r ts-node/register \"+(src|packages)/**/*.spec.ts\"",
        "integration-tests": "npm run build && mocha -r ts-node/register \"integration-tests/**/*.spec.ts\" --timeout 10000",
        "prepublishOnly": "npm test && npm run lint && npm run integration-tests",
        "prep-pr": "npm run format && npm run lint:fix && npm run test && npm run integration-tests",
        "test-log": "node integration-tests/test-utils/test-log-execution.js"
    },
    "keywords": [
        "monorepo",
        "change detection"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/abuob/yanice.git"
    },
    "author": "abuob",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/abuob/yanice/issues"
    },
    "homepage": "https://github.com/abuob/yanice#readme",
    "dependencies": {
        "ajv": "^8.12.0",
        "async": "^3.2.4",
        "graceful-fs": "^4.2.11",
        "minimatch": "^9.0.1"
    },
    "devDependencies": {
        "@tsconfig/node16": "^1.0.4",
        "@tsconfig/strictest": "^2.0.1",
        "@types/async": "^3.2.18",
        "@types/chai": "^4.3.4",
        "@types/graceful-fs": "^4.1.6",
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.15.11",
        "@typescript-eslint/eslint-plugin": "^5.59.9",
        "@typescript-eslint/parser": "^5.59.9",
        "@yanice/import-boundaries": "file:packages/import-boundaries",
        "chai": "^4.3.7",
        "eslint": "^8.42.0",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "mocha": "^10.2.0",
        "prettier": "^2.8.8",
        "ts-node": "^10.9.1",
        "typescript": "5.1.3",
        "yanice": "file:."
    }
}
