        "lint": {
          "command": "npm run lint-P1"
        },
        "test": {
          "command": "npm run test-P1",
          "cwd": "path/to/dir/P1"
        }
      },
      "responsibles": [
        "Alice"
      ]
    },
    {
      "projectName": "P2",
      "pathGlob": "path/to/dir/P2/**",
      "pathRegExp": "path/to/dir/P2",
      "commands": {
        "lint": {
          "command": "npm run lint-P2",
          "cwd": "path/to/dir/P2"
        }
      },
      "responsibles": [
        "Bob"
      ]
    },
    {
      "projectName": "P3",
      "pathRegExp": "path/to/dir/P3",
      "commands": {
        "lint": {
          "command": "npm run lint-P2",
          "cwd": "path/to/dir/P2"
        }
      },
      "responsibles": [
        "Harry"
      ]
    },
    {
      "projectName": "lib-123",
      "pathRegExp": "libs/lib-123",
